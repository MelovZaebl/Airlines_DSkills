<Window x:Class="_17_10_2022.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_17_10_2022"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStyle="None" Loaded="Load">
    <StackPanel>
        <Image Source="/Img/DS2017_TP09_color@4x.png" HorizontalAlignment="Center" Margin="150, 40"/>
        <WrapPanel>
            <TextBlock Text="Username:" Margin="120, 0, 10, 0" FontSize="16"/>
            <TextBox Width="450" Name="TBLogin"/>
        </WrapPanel>
        <WrapPanel Margin="0,20">
            <TextBlock Text="Password:" Margin="120, 0, 16, 0" FontSize="16"/>
            <TextBox Width="450" Name="TBPass"/>
        </WrapPanel>
        <TextBlock Name="TBTimer" HorizontalAlignment="Center"/>
        <WrapPanel Margin="0, 30" HorizontalAlignment="Center">
            <Button Name="btn_login" Width="150" Height="25" Margin="40, 0" Content="Login" FontSize="14" Click="Login"/>
            <Button Width="150" Height="25" Margin="40, 0" Content="Exit" FontSize="14" Click="Exit"/>
        </WrapPanel>
    </StackPanel>
</Window>
